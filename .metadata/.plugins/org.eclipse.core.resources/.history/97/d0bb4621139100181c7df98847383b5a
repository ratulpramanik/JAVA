package Patterns;

public class face {
		public static void main(String args[]) {
			int i,j;
			for(i=1;i<=4;i++) {
				for(j=1;j<=8;j++) {
					if(i==1||i==4) {
						System.out.print("-");
					}
					else if(i==2 &&(j==3 ||j==6)) {
						System.out.print("0");
					}
					else
						System.out.print(" ");
				
				if(j==1||j==7) {
					System.out.print("|");
				}
				else
				{
					System.out.print(" ");
				}
				}
				System.out.println();
			}
		}
}
